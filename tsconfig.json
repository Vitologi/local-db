{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es6", "es2017", "DOM"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "rootDirs": ["./src","./test"],
    "strict": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}
